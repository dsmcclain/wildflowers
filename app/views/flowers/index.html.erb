<h1>Listing All Flowers</h1>

<%= link_to 'New Flower', new_flower_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @flowers.each do |flower|%>
    <tr>
      <td><%= flower.name%></td>
      <td><%= flower.description%></td>
      <td><%= link_to 'Show', flower_path(flower) %></td>
      <td><%= link_to 'Edit', edit_flower_path(flower) %></td>
      <td><%= link_to 'Delete', flower_path(flower),
              method: :delete,
              data: { confirm: 'Delete this flower: Are you sure?'} %></td>
    </tr>
  <% end %>
</table>